<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name>BasicServlets</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  
  <servlet>
  	<servlet-name>Crypto</servlet-name>
  	<servlet-class>com.basic.servlets.CryptocurrencyServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>Crypto</servlet-name>
  	<url-pattern>/crypto</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>com.basic.servlets.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Dresponse</servlet-name>
    <servlet-class>com.basic.servlets.DirectServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Dresponse</servlet-name>
    <url-pattern>/gibberish</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>IndirectR</servlet-name>
    <servlet-class>com.basic.servlets.IndirectServlet</servlet-class>
    <init-param>
      <param-name>Favorite Food</param-name>
      <param-value>Bacon</param-value>
    </init-param>
    <init-param>
      <param-name>Best Food</param-name>
      <param-value>Mac and Cheese</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>IndirectR</servlet-name>
    <url-pattern>/indirect</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>LifeCycleServlet</display-name>
    <servlet-name>LifeCycleServlet</servlet-name>
    <servlet-class>com.basic.servlets.LifeCycleServlet</servlet-class>
    <load-on-startup>0</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>LifeCycleServlet</servlet-name>
    <url-pattern>/LifeCycleServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Session</servlet-name>
    <servlet-class>com.basic.servlests.SessionServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Session</servlet-name>
    <url-pattern>/sesh</url-pattern>
    <url-pattern>/othersesh/*</url-pattern>
  </servlet-mapping>
  <context-param>
    <param-name>databaseUrl</param-name>
    <param-value>https://google.com</param-value>
  </context-param>
  <servlet>
    <description></description>
    <display-name>MasterServlet</display-name>
    <servlet-name>MasterServlet</servlet-name>
    <servlet-class>com.basic.servlets.MasterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MasterServlet</servlet-name>
    <url-pattern>/api/*</url-pattern>
    <!-- <project-name>/api/lkasjdflak -->
  </servlet-mapping>
</web-app>